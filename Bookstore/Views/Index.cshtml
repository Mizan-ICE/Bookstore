@model IEnumerable<Bookstore.Models.Book>

<h2>Book List</h2>
<a href="@Url.Action("Create")">Create New Book</a>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Published Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedYear</td>
            </tr>
        }
    </tbody>
</table>
